<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @name %></dd>
  <dt>Location</dt>
  <dd><%= @location %></dd>
</dl>

<div class='pull-right'>
  <%= link_to 'Put Object', new_put_path, class: 'btn btn-primary' %>
  <%= link_to 'Post Object', '#', class: 'btn btn-primary' %>
</div>

<table class='table table-hover'>
  <thead>
  <tr>
    <th>Key</th>
    <th>etag</th>
    <th>type</th>
    <th>size</th>
    <th>last_modified</th>
  </tr>
  </thead>

  <tbody>
    <% @objects.each do |object| %>
      <tr>
        <td><%= object.key %></td>
        <td><%= object.etag %></td>
        <td><%= object.type %></td>
        <td><%= object.size %></td>
        <td><%= object.last_modified %></td>
        <td>
          <%= link_to 'Download', download_path(key: object.key), method: :put %>
          <%= link_to 'Share Link', object.share_link(1.hour), target: '_blank' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
